@{
    ViewBag.Title = "Home";
}
<link rel="stylesheet" href="~/Content/bundle.css?ver=112">
<link rel="stylesheet" href="~/Content/styles-azure.css?ver=112">
@Styles.Render("~/Content/css")


<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>



    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/bannermovies2.png" alt="Movies">

        </div>



        <div class="item">
            <img src="~/Content/banner series.jpg" alt="Series">
        </div>



        <div class="item">
            <img src="~/Content/bannermembership.jpg" alt="Membership">
        </div>
    </div>




    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<div class="row">
    <div class="col-md-4">
        <h2>Movies</h2>
        <p>
            You can see a detailed view of our movies, such as the title, genre, release date, director and more.<br /><br />
            @Html.ActionLink("Browse Movies", "Index", "Movies", null, new { @class = "btn btn-primary" })

        </p>
        <p></p>
    </div>
    <div class="col-md-4">
        <h2>Series</h2>
        <p>
            You can see a detailed view of our series, such as the title, genre, release date, director and more.<br /><br />
            @Html.ActionLink("Browse Series", "Index", "Series", null, new { @class = "btn btn-primary" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Membership</h2>
        <p>
            You can see a detailed view of our customers, such as first name, last name, birth date, email and more.<br /><br />
            @Html.ActionLink("Check Memberships", "Index", "MemberShipTypes", null, new { @class = "btn btn-primary" })
        </p>
        <p></p>
    </div>

</div>
